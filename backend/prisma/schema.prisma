generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  walletAddress String    @unique
  email         String?   @unique
  username      String?   @unique
  passwordHash  String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  staking       Staking[]
  impactNfts    ImpactNft[]
}

enum UserRole {
  USER
  ADMIN
}

model Staking {
  id            String    @id @default(cuid())
  walletAddress String
  amount        Decimal   @db.Numeric(78, 0)
  startDate     DateTime
  rewards       Decimal   @db.Numeric(78, 0)
  status        String
  txHash        String?

  user User? @relation(fields: [walletAddress], references: [walletAddress])
}

model ImpactNft {
  id            String   @id @default(cuid())
  walletAddress String
  projectId     String?
  carbonOffset  Decimal  @db.Numeric(78, 0)
  metadataURL   String
  tokenId       String?

  user    User?    @relation(fields: [walletAddress], references: [walletAddress])
  project Project? @relation(fields: [projectId], references: [id])
}

model Project {
  id          String      @id @default(cuid())
  projectName String
  location    String?
  description String?
  fundsRaised Decimal     @db.Numeric(78, 0)
  impactScore Int         @default(0)
  status      String      @default("PENDING")

  impactNfts ImpactNft[]
}

model EventLog {
  id        String   @id @default(cuid())
  eventType String
  txHash    String
  data      Json
  timestamp DateTime @default(now())
}
